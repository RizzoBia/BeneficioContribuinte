@model BeneficioContribuinte.Models.Contribuinte

@{
    ViewData["Title"] = "Detalhes do Contribuinte";
}

<h1>Detalhes do Contribuinte</h1>

<hr />
<dl class="row">
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.CNPJ)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.CNPJ)
    </dd>

    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.RazaoSocial)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.RazaoSocial)
    </dd>

    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.DataAbertura)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.DataAbertura)
    </dd>

    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.RegimeTributacao)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.RegimeTributacao)
    </dd>

    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.PossuiBeneficio)
    </dt>
    <dd class="col-sm-10">
        @(Model.PossuiBeneficio ? "Sim" : "Não")
    </dd>


    @if (Model.PossuiBeneficio)
    {
        <dt class="col-sm-2">
            Benefício
        </dt>
        <dd class="col-sm-10">
            @(Model.Beneficio != null ? Model.Beneficio.Nome : "Nenhum benefício associado")
        </dd>
    }
</dl>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Voltar à Lista</a>
</div>
