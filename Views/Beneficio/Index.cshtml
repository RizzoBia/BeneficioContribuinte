@model IEnumerable<BeneficioContribuinte.Models.Beneficio>

@{
    ViewData["Title"] = "Lista de Benefícios";
}

<h1>Benefícios</h1>

<p>
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Adicionar Novo Benefício
    </a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Percentual de Desconto</th>
            <th>Quantidade de Contribuintes</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var beneficio in Model)
        {
            <tr>
                <td>
                    @beneficio.Nome
                </td>
                <td>
                    @beneficio.PercentualDesconto%
                </td>
                <td>
                    @beneficio.QuantidadeContribuintes
                </td>
                <td>
                    <!-- Botão de Editar -->
                    <a asp-action="Edit" asp-route-id="@beneficio.Id" class="btn btn-warning btn-sm">
                        <i class="bi bi-pencil"></i> Editar
                    </a>

                    <!-- Botão de Excluir -->
                    <a asp-action="Delete" asp-route-id="@beneficio.Id" class="btn btn-danger btn-sm">
                        <i class="bi bi-trash"></i> Excluir
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="mt-3">
    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
        <i class="bi bi-house"></i> Voltar à Página Principal
    </a>
</div>


