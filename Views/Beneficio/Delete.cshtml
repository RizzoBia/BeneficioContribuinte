@model BeneficioContribuinte.Models.Beneficio

@{
    ViewData["Title"] = "Excluir Benefício";
}

<h1>Excluir Benefício</h1>

<h3>Tem certeza de que deseja excluir este benefício?</h3>
<div>
    <h4>Detalhes do Benefício</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PercentualDesconto)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PercentualDesconto)
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Excluir</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
