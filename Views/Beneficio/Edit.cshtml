@model BeneficioContribuinte.Models.Beneficio

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar Benefício</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PercentualDesconto" class="control-label"></label>
                <input asp-for="PercentualDesconto" class="form-control" type="number" step="0.01" min="0" />
                <span asp-validation-for="PercentualDesconto" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Salvar Alterações" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div class="mt-4">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-house"></i> Voltar
        </a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}